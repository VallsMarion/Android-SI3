<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/staffPointIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_map_marker" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/staffPointName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stand information rue de la musique"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/staffPointDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ouvert de 8:00 Ã  13:00"
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/staffPointDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0.4 km)"
            android:textSize="14sp"
            android:textColor="#757575"/>
    </LinearLayout>

</LinearLayout>
